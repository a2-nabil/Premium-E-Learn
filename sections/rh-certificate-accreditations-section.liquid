<div class="rh-p-learn-certificate-acrediantions-section">
        <div class="container_rh">
            <div class="rh-certificate-main-wrapper_rh">
                <div class="rh-certificate-content-wrapper_rh">
                    <div class="rh-certificate-header-wrapper_rh">
                        <h2 class="rh-certificate-title_rh">{{ section.settings.title | default: "Our Certifications & Accreditations" }}</h2>
                    </div>
                    {% if section.settings.description != blank %}
                    <p class="rh-certificate-description_rh">{{ section.settings.description | default: "We partner with trusted global organisations to ensure your certificate holds real-world value and recognition." }}</p>
                    {% endif %}
                </div>
                <div class="rh-certificate-logos-section_rh">
                    <div class="rh-certificate-logos-wrapper_rh">
                        {% for block in section.blocks %}
                            {% if block.type == 'certification_logo' %}
                                <div class="rh-certificate-logo-item_rh" {{ block.shopify_attributes }}>
                                    {% if block.settings.logo != blank %}
                                        <img src="{{ block.settings.logo | img_url: '217x104' }}" 
                                             alt="{{ block.settings.alt_text | default: 'Certification Logo' }}" 
                                             class="rh-certificate-logo-img_rh" 
                                             height="auto"
                                             width="auto"
                                             loading="lazy" />
                                    {% else %}
                                        <img src="https://dummyimage.com/217x104/1E3A8A/FFFFFF?text=Certification" 
                                             alt="{{ block.settings.alt_text | default: 'Certification Logo' }}" 
                                             class="rh-certificate-logo-img_rh" 
                                             height="auto"
                                             width="auto"
                                             loading="lazy" />
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                        
                        {% comment %} Default logos if no blocks are added {% endcomment %}
                        {% if section.blocks.size == 0 %}
                            <div class="rh-certificate-logo-item_rh">
                                <img src="https://dummyimage.com/217x104/1E3A8A/FFFFFF?text=ISO+9001" alt="ISO 9001 Certification" class="rh-certificate-logo-img_rh" height="auto" width="auto" loading="lazy" />
                            </div>
                            <div class="rh-certificate-logo-item_rh">
                                <img src="https://dummyimage.com/217x104/DC2626/FFFFFF?text=CPD+Certified" alt="CPD Certification" class="rh-certificate-logo-img_rh" height="auto" width="auto" loading="lazy" />
                            </div>
                            <div class="rh-certificate-logo-item_rh">
                                <img src="https://dummyimage.com/217x104/059669/FFFFFF?text=IIBA+Partner" alt="IIBA Partnership" class="rh-certificate-logo-img_rh" height="auto" width="auto" loading="lazy" />
                            </div>
                            <div class="rh-certificate-logo-item_rh">
                                <img src="https://dummyimage.com/217x104/7C3AED/FFFFFF?text=PMI+Approved" alt="PMI Approved" class="rh-certificate-logo-img_rh" height="auto" width="auto" loading="lazy" />
                            </div>
                            <div class="rh-certificate-logo-item_rh">
                                <img src="https://dummyimage.com/217x104/EA580C/FFFFFF?text=ACCA+Partner" alt="ACCA Partnership" class="rh-certificate-logo-img_rh" height="auto" width="auto" loading="lazy" />
                            </div>
                            <div class="rh-certificate-logo-item_rh">
                                <img src="https://dummyimage.com/217x104/0F766E/FFFFFF?text=CIPD+Approved" alt="CIPD Approved" class="rh-certificate-logo-img_rh" height="auto" width="auto" loading="lazy" />
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

