{% style %}
    .rh-p-learn-certificate-acrediantions-section {
  background: {{ section.settings.background_color | default: '#000a1e' }};
  padding: {{ section.settings.padding_top_desktop | default: 128 }}px {{ section.settings.padding_horizontal_desktop | default: 20 }}px {{ section.settings.padding_bottom_desktop | default: 128 }}px {{ section.settings.padding_horizontal_desktop | default: 20 }}px;
}

.rh-p-learn-certificate-acrediantions-section .container_rh {
  max-width: 1420px;
  width: 100%;
  margin: 0 auto;
}

.rh-certificate-main-wrapper_rh {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 69px;
  width: 100%;
}

.rh-certificate-content-wrapper_rh {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 24px;
  max-width: 810px;
  width: 100%;
}

.rh-certificate-header-wrapper_rh {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.rh-certificate-title_rh {
  color: white;
  font-size: 55px;
  font-family: "Neue Haas Grotesk Display Pro", Arial, sans-serif;
  font-weight: 300;
  line-height: 64px;
  word-wrap: break-word;
  margin: 0;
  width: 100%;
}

.rh-certificate-description_rh {
  color: #c0c2c1;
  font-size: 18px;
  font-family: "Neue Haas Grotesk Display Pro", Arial, sans-serif;
  font-weight: 600;
  line-height: 22.56px;
  letter-spacing: 0.72px;
  word-wrap: break-word;
  margin: 0;
}

.rh-certificate-logos-section_rh {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 32px;
  width: 100%;
}

.rh-certificate-logos-wrapper_rh {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 23px;
  width: 100%;
  flex-wrap: wrap;
}

.rh-certificate-logo-item_rh {
  overflow: hidden;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 217px;
  min-height: 104px;
  flex: 0 0 auto;
}

.rh-certificate-logo-img_rh {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

