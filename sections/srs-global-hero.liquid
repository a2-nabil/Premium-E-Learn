<style>
    .srs-hero-home {
        position: relative;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        font-family: 'Neue Haas Grotesk Display Pro', sans-serif;
        padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    }
.srs-hero-home a:empty,.srs-hero-home  ul:empty,.srs-hero-home  dl:empty,.srs-hero-home  div:empty,.srs-hero-home  section:empty,.srs-hero-home  article:empty,.srs-hero-home  p:empty, .srs-hero-home h1:empty, .srs-hero-home h2:empty, .srs-hero-home h3:empty, .srs-hero-home h4:empty,.srs-hero-home  h5:empty,.srs-hero-home  h6:empty{
display: block;
}
    .srs-hero-home .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }

    .srs-hero-home .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: {{ section.settings.overlay_color}};
        opacity:{{  section.settings.overlay_opacity }}%;
        z-index: 2;
    }

    .srs-hero-home  .srs-container {
        position: relative;
        z-index: 3;
        max-width: 1420px;
        width: 100%;
        margin: 0 auto;
        padding: 0 20px;
        text-align: {{ section.settings.content_alignment }};
    }

    .srs-hero-home  .hero-title {
        color: white;
        font-size: {{ section.settings.title_font_size_desktop }}px;
        font-weight: {{ section.settings.title_font_weight }};
        line-height: {{ section.settings.title_font_size_desktop }}px;
        /* max-width: 939px; */
        margin: 0;
        margin-bottom: 40px;
        text-align: {{ section.settings.content_alignment }};
    }

    .srs-hero-home .hero-content {
        max-width: {{ section.settings.content_max_width }}px;
        text-align: {{ section.settings.content_alignment }};
    }

    .srs-hero-home .hero-description {
        color: white;
        font-size: {{ section.settings.description_font_size_desktop }}px;
        font-weight: 400;
        line-height: {{ section.settings.description_font_size_desktop | plus: 3.36 }}px;
        letter-spacing: 0.36px;
        margin-bottom: 40px;
    }

    .srs-hero-home .hero-buttons {
        display: flex;
        align-items: center;
        gap: 40px;
        flex-wrap: wrap;
    }

    .srs-hero-home .primary-button {
        padding: 16px 32px;
        background: {{ section.settings.primary_button_bg_color }};
        border-radius: 9999px;
        color: {{ section.settings.primary_button_text_color }};
        font-size: 18px;
        font-family: 'Inter Variable', sans-serif;
        font-weight: 400;
        line-height: 24px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        {% if section.settings.primary_button_style == 'outlined' %}
        border: 2px solid {{ section.settings.primary_button_bg_color }};
        background: transparent;
        {% endif %}
    }

    .srs-hero-home .primary-button:hover {
        background: #f0f0f0;
        transform: translateY(-2px);
    }

    .srs-hero-home .secondary-button {
        display: flex;
        align-items: center;
        gap: 8px;
        color: {{ section.settings.secondary_button_color }};
        font-size: 16px;
        font-family: 'Inter Variable', sans-serif;
        font-weight: 400;
        line-height: 24px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .srs-hero-home .secondary-button:hover {
        opacity: 0.8;
    }

    .srs-hero-home .play-icon {
        width: 7.43px;
        height: 8.28px;
        background: white;
        outline: 0.55px white solid;
        outline-offset: -0.28px;
    }

    @media (max-width: 768px) {
        .srs-hero-home .hero-title {
            font-size: {{ section.settings.title_font_size_mobile }}px;
            line-height: {{ section.settings.title_font_size_mobile }}px;
        }

        .srs-hero-home .hero-description {
            font-size: {{ section.settings.description_font_size_mobile }}px;
            line-height: {{ section.settings.description_font_size_mobile | plus: 4 }}px;
        }

        .srs-hero-home .hero-buttons {
            flex-direction: column;
            gap: 20px;
        }
    }

    {% if section.settings.enable_animations %}
    .srs-hero-home .hero-title,
    .srs-hero-home .hero-description,
    .srs-hero-home .hero-buttons {
        opacity: 0;
        animation: {{ section.settings.animation_type }} {{ section.settings.animation_duration }}s ease-out forwards;
    }

    .srs-hero-home .hero-title {
        animation-delay: 0.2s;
    }

    .srs-hero-home .hero-description {
        animation-delay: 0.4s;
    }

    .srs-hero-home .hero-buttons {
        animation-delay: 0.6s;
    }

    @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slide-up {
        from { 
            opacity: 0; 
            transform: translateY(30px); 
        }
        to { 
            opacity: 1; 
            transform: translateY(0); 
        }
    }

    @keyframes slide-left {
        from { 
            opacity: 0; 
            transform: translateX(-30px); 
        }
        to { 
            opacity: 1; 
            transform: translateX(0); 
        }
    }

    @keyframes zoom-in {
        from { 
            opacity: 0; 
            transform: scale(0.9); 
        }
        to { 
            opacity: 1; 
            transform: scale(1); 
        }
    }
    {% endif %}
</style>
<section class="srs-hero-home" {% if section.settings.background_type == 'color' %}style="background-color: {{ section.settings.background_color }};"{% endif %}>
    {% if section.settings.background_type == 'video' and section.settings.video_url != blank %}
        <video class="video-background" autoplay muted loop>
            <source src="{{ section.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    {% endif %}
    
    {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}
        <div class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('{{ section.settings.background_image | image_url }}'); background-size: cover; background-position: center; z-index: 1;"></div>
    {% endif %}
    
    <div class="background-overlay"></div>
    <div class="srs-container">
        {% if section.settings.hero_title != blank %}
            <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
        {% endif %}
        <div class="hero-content">
            {% if section.settings.hero_description != blank %}
                <p class="hero-description">{{ section.settings.hero_description }}</p>
            {% endif %}
            <div class="hero-buttons">
                {% if section.settings.primary_button_text != blank and section.settings.primary_button_link != blank %}
                    <a href="{{ section.settings.primary_button_link }}" class="primary-button">{{ section.settings.primary_button_text }}</a>
                {% endif %}
                {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
                    <a href="{{ section.settings.secondary_button_link }}" class="secondary-button">
                        {% if section.settings.show_play_icon %}
                            <svg width="9" height="10" viewBox="0 0 9 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 8.04149V1.95849C1.0002 1.7655 1.05117 1.57595 1.14779 1.40889C1.24442 1.24182 1.3833 1.10312 1.55049 1.00671C1.71768 0.910298 1.90729 0.85957 2.10028 0.859619C2.29328 0.859669 2.48286 0.910494 2.65 1.00699L7.886 4.04849C8.05269 4.14519 8.19106 4.28398 8.28724 4.45097C8.38342 4.61796 8.43405 4.80728 8.43405 4.99999C8.43405 5.1927 8.38342 5.38203 8.28724 5.54902C8.19106 5.71601 8.05269 5.8548 7.886 5.95149L2.65 8.99299C2.48286 9.08949 2.29328 9.14032 2.10028 9.14036C1.90729 9.14041 1.71768 9.08969 1.55049 8.99327C1.3833 8.89686 1.24442 8.75816 1.14779 8.5911C1.05117 8.42403 1.0002 8.23449 1 8.04149Z" fill="{{ section.settings.secondary_button_color }}" stroke="{{ section.settings.secondary_button_color }}" stroke-width="0.55" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        {% endif %}
                        <span>{{ section.settings.secondary_button_text }}</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</section>

