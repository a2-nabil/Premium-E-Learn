                color: #666;
                margin-bottom: 10px;
                font-weight: 500;
            }
    
            .suggestion-item {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 10px;
                border-radius: 6px;
                cursor: pointer;
                transition: background 0.3s ease;
                color: #333;
                text-decoration: none;
            }
    
            .suggestion-item:hover {
                background: #f5f5f5;
            }
    
            .suggestion-icon {
                width: 20px;
                height: 20px;
                background: #7B46A5;
                border-radius: 4px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 12px;
                font-weight: bold;
            }
    
            /* Responsive Design */
            @media (max-width: 1024px) {
                header.srs-header .nav-section {
                    display: none;
                }
    
                header.srs-header .actions-section {
                    display: none;
                }
    
                header.srs-header .hamburger-menu {
                    display: flex;
                }
    
                header.srs-header .mobile-actions {
                    display: flex;
