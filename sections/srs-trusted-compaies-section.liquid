{%- style -%}
  .srs-trusted-company-section {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_horizontal }}px;
    display: flex;
    align-items: center;
    font-family: {% case section.settings.font_family %}
      {% when 'neue-haas' %}'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif
      {% when 'system' %}-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif
      {% when 'arial' %}'Arial', sans-serif
      {% when 'helvetica' %}'Helvetica', sans-serif
      {% when 'georgia' %}'Georgia', serif
      {% when 'times' %}'Times New Roman', serif
      {% else %}'Neue Haas Grotesk Display Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif
    {% endcase %};
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 1025px) {
    section.srs-trusted-company-section:before {
      content: "";
      width: 100%;
      height: {{ section.settings.gradient_height }}px;
      background: linear-gradient(180deg, {{ section.settings.background_color }} 0%, {{ section.settings.background_color | color_modify: 'alpha', 0 }} 100%);
      position: absolute;
      top: {{ section.settings.gradient_top_position }}px;
    }
    section.srs-trusted-company-section:after {
      content: "";
      width: 100%;
      height: {{ section.settings.gradient_height }}px;
      background: linear-gradient(0deg, {{ section.settings.background_color }} 0%, {{ section.settings.background_color | color_modify: 'alpha', 0 }} 100%);
      position: absolute;
      bottom: -47px;
    }
  }

  .srs-trusted-company-section .srs-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .srs-trusted-company-section .trusted-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  .srs-trusted-company-section .trusted-title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: {{ section.settings.title_line_height }}px;
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }

  .srs-trusted-company-section .trusted-subtitle {
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_font_size }}px;
    font-weight: {{ section.settings.subtitle_font_weight }};
    line-height: {{ section.settings.subtitle_line_height }}px;
    letter-spacing: {{ section.settings.subtitle_letter_spacing }}px;
    max-width: {{ section.settings.subtitle_max_width }}px;
  }

  .srs-trusted-company-section .companies-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin: 0 auto;
  }

  .srs-trusted-company-section .company-card {
    background: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: 0 {{ section.settings.card_padding }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ section.settings.card_min_height }}px;
    transition: transform {{ section.settings.hover_animation_duration }}s ease, box-shadow {{ section.settings.hover_animation_duration }}s ease;
    {% if section.settings.enable_card_border %}
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    {% endif %}
  }

  .srs-trusted-company-section .company-card:hover {
    transform: translateY(-{{ section.settings.hover_lift_distance }}px);
    box-shadow: {{ section.settings.hover_shadow }};
  }

  .srs-trusted-company-section .company-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    width: auto;
    height: auto;
    filter: {{ section.settings.logo_filter }};
  }

  /* Responsive design */
  @media (max-width: 1200px) {
    .srs-trusted-company-section .companies-grid {
      grid-template-columns: repeat({{ section.settings.tablet_columns }}, 1fr);
    }
  }

  @media (max-width: 900px) {
    .srs-trusted-company-section .companies-grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
    }
    
    .srs-trusted-company-section .trusted-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }}px;
    }
  }

  @media (max-width: 600px) {
    .srs-trusted-company-section .companies-grid {
      grid-template-columns: repeat({{ section.settings.small_mobile_columns }}, 1fr);
      gap: {{ section.settings.mobile_grid_gap }}px;
    }
    
    .srs-trusted-company-section .trusted-title {
      font-size: {{ section.settings.title_font_size_small_mobile }}px;
      line-height: {{ section.settings.title_line_height_small_mobile }}px;
    }
    
    .srs-trusted-company-section .trusted-subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
    }
    
    .srs-trusted-company-section {
      padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_horizontal_mobile }}px {{ section.settings.padding_bottom_mobile }}px {{ section.settings.padding_horizontal_mobile }}px;
    }
  }

  @media (max-width: 400px) {
    .srs-trusted-company-section .companies-grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="srs-trusted-company-section" id="srs-trusted-section-{{ section.id }}">
  <div class="srs-container">
    {% if section.settings.show_header %}
      <header class="trusted-header">
        {% if section.settings.title != blank %}
          <h{{ section.settings.title_tag }} class="trusted-title">{{ section.settings.title }}</h{{ section.settings.title_tag }}>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="trusted-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </header>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="companies-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'company' %}
              <div class="company-card" {{ block.shopify_attributes }}>
                {% if block.settings.company_logo != blank %}
                  <img 
                    src="{{ block.settings.company_logo | image_url: width: block.settings.logo_width }}" 
                    alt="{{ block.settings.company_name | default: 'Company Logo' }}" 
                    class="company-logo"
                    loading="lazy"
                    width="{{ block.settings.logo_width }}"
                    height="{{ block.settings.logo_height }}"
                  >
                {% elsif block.settings.company_name != blank %}
                  <div class="company-logo-text" style="color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px; font-weight: {{ block.settings.text_weight }};">
                    {{ block.settings.company_name }}
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

