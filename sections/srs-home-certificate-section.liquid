<style>
    .srs-certificate-section * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  
    .srs-certificate-section {
      background: {{ section.settings.background_color }};
      padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_sides }}px {{ section.settings.section_padding_bottom }}px;
      font-family: 'Neue Haas Grotesk Display Pro', sans-serif;
    }
  
    .srs-certificate-section .srs-container {
      max-width: {{ section.settings.max_width }}px;
      margin: 0 auto;
      padding: 0 {{ section.settings.container_padding }}px;
    }
  
    #{{ section.id }} .certificate-content {
      display: flex;
      flex-direction: {{ section.settings.desktop_layout }};
      justify-content: space-between;
      align-items: center;
      gap: {{ section.settings.content_gap }}px;
    }
  
    .srs-certificate-section .certificate-image-container {
      flex: 1;
      max-width: {{ section.settings.image_width }}%;
      position: relative;
    }

    .srs-certificate-section .certificate-image {
      width: 100%;
      max-width: {{ section.settings.image_max_width }}px;
      height: auto;
      display: block;
      border-radius: {{ section.settings.image_border_radius }}px;
    }
      .srs-certificate-section .certificate-image.row-reverse{
    margin-left: auto;
  }
  
    .srs-certificate-section .certificate-text-content {
      flex: 1;
      max-width: calc(100% - {{ section.settings.image_width }}% - {{ section.settings.content_gap }}px);
      display: flex;
      flex-direction: column;
      gap: {{ section.settings.text_content_gap }}px;
    }
  
    .srs-certificate-section .main-heading {
      color: {{ section.settings.heading_color }};
      font-size: {{ section.settings.heading_font_size }}px;
      font-weight: {{ section.settings.heading_font_weight }};
      line-height: {{ section.settings.heading_line_height }};
      margin-bottom: {{ section.settings.heading_bottom_margin }}px;
    }
  
    .srs-certificate-section .main-description {
      color: {{ section.settings.description_color }};
      font-size: {{ section.settings.description_font_size }}px;
      font-weight: {{ section.settings.description_font_weight }};
      line-height: {{ section.settings.description_line_height }};
      letter-spacing: {{ section.settings.description_letter_spacing }}px;
      margin-bottom: {{ section.settings.description_bottom_margin }}px;
    }
  
    .srs-certificate-section .features-list {
      display: flex;
      flex-direction: column;
      gap: {{ section.settings.features_gap }}px;
    }
  
    .srs-certificate-section .feature-item {
      padding-left: {{ section.settings.feature_border_left_padding }}px;
      border-left: {{ section.settings.feature_border_left_width }}px solid {{ section.settings.feature_border_left_color }};
      display: flex;
      flex-direction: column;
      gap: {{ section.settings.feature_item_gap }}px;
    }
  
    .srs-certificate-section .feature-title {
      color: {{ section.settings.feature_title_color }};
      font-size: {{ section.settings.feature_title_font_size }}px;
      font-weight: {{ section.settings.feature_title_font_weight }};
      line-height: {{ section.settings.feature_title_line_height }};
      letter-spacing: {{ section.settings.feature_title_letter_spacing }}px;
    }
  
    .srs-certificate-section .feature-description {
      color: {{ section.settings.feature_description_color }};
      font-size: {{ section.settings.feature_description_font_size }}px;
      font-weight: {{ section.settings.feature_description_font_weight }};
      line-height: {{ section.settings.feature_description_line_height }};
      letter-spacing: {{ section.settings.feature_description_letter_spacing }}px;
    }
  
    .srs-certificate-section .discount-code {
      color: {{ section.settings.discount_code_color }};
      font-weight: {{ section.settings.discount_code_font_weight }};
    }
  
    /* Responsive Design */
    @media (max-width: 1024px) {
    #{{ section.id }} .certificate-content {
        flex-direction: {{ section.settings.mobile_layout }};
        text-align: {{ section.settings.mobile_text_align }};
      }
  
      .srs-certificate-section .certificate-image-container,
      .srs-certificate-section .certificate-text-content {
        max-width: 100%;
      }
  
      .srs-certificate-section .main-heading {
        font-size: {{ section.settings.mobile_heading_font_size }}px;
      }
  
      .srs-certificate-section .feature-title {
        font-size: {{ section.settings.mobile_feature_title_font_size }}px;
      }
  
      .srs-certificate-section .main-description {
        font-size: {{ section.settings.mobile_description_font_size }}px;
      }
  
      .srs-certificate-section .feature-description {
        font-size: {{ section.settings.mobile_feature_description_font_size }}px;
      }
    }
  
    @media (max-width: 768px) {
      .srs-certificate-section {
        padding: {{ section.settings.mobile_section_padding_top }}px {{ section.settings.mobile_section_padding_sides }}px {{ section.settings.mobile_section_padding_bottom }}px;
      }
    }
  </style>
  
  <section class="srs-certificate-section" id="{{ section.id }}">
    <div class="srs-container">
      <div class="certificate-content">
        <div class="certificate-image-container">
          {% if section.settings.certificate_image != blank %}
            <img class="certificate-image {{ section.settings.desktop_layout }}" 
                 src="{{ section.settings.certificate_image | img_url: '800x' }}" 
                 alt="{{ section.settings.certificate_image.alt | escape }}" 
                 loading="lazy" />
          {% else %}
            <img class="certificate-image {{ section.settings.desktop_layout }} " src="https://placehold.co/513x680" alt="Certificate" />
          {% endif %}
        </div>
        <div class="certificate-text-content">
          <div class="main-content">
            <h1 class="main-heading">{{ section.settings.heading_text }}</h1>
            <p class="main-description">{{ section.settings.description_text }}</p>
          </div>
          <div class="features-list">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'feature' %}
                  <div class="feature-item" {{ block.shopify_attributes }}>
                    <h2 class="feature-title">{{ block.settings.feature_title }}</h2>
                    <p class="feature-description">{{ block.settings.feature_description }}</p>
                  </div>
                {% when 'discount' %}
                  <div class="feature-item" {{ block.shopify_attributes }}>
                    <h2 class="feature-title">{{ block.settings.discount_title }}</h2>
                    <p class="feature-description">{{ block.settings.discount_description | replace: '[code]', '<span class="discount-code">' | append: '</span>' }}</p>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>
  
