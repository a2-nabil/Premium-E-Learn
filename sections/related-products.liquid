{%- style -%}
        .nxt-related__area{
          background-color: {{ section.settings.background_color }};
          padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
          padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
          padding-left: 15px;
          padding-right: 15px;
        }

        @media screen and (min-width: 750px) {
          .nxt-related__area{
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
          }
        }
      .nxt-related__area .hidden-courses {
          display: none;
      }
      .nxt-related__area .course-actions {
        display: flex;
        margin-top: 40px;
        align-items: center;
        gap: 24px;
        text-align: center;
      }
      .nxt-related__area .show-more-courses {
        color: #fff;
        border-radius: 9999px;
        border: 2px solid #FFFFFF;
        padding: 12px 24px;
        background-color: transparent;
        cursor: pointer;
        font-family: "Inter", sans-serif;
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
        transition: all .3s ease;
        outline: none;
      }
      .nxt-related__area .show-more-courses:hover {
        background-color: #FFFFFF;
        color: #020A08;
        border-color: #ffffff;
      }
      .nxt-related__title {
        font-family: "Neue Haas Grotesk Display Pro", sans-serif;
        font-weight: 300;
        font-size: 70px;
        line-height: 100%;
        margin: 0;
        color: #FFFFFF;
    }
    .nxt-related__subtitle {
        font-family: "Neue Haas Grotesk Display Pro", sans-serif;
        font-weight: 300;
        font-size: 55px;
        line-height: 64px;
        color: #676C6B;
        margin: 13px 0 0;
    }
    @media (max-width: 1199px) {
      :root{
          --grid-desktop-vertical-spacing: 20px;
          --grid-desktop-horizontal-spacing: 20px;
      }
  }
  @media (max-width: 1070px) {
       .nxt-related__area .grid .grid__item {
          width: calc(50% - var(--grid-desktop-horizontal-spacing) / 2);
          max-width: calc(50% - var(--grid-desktop-horizontal-spacing) / 2);
      }
  }
    @media (max-width: 1024px) {
      .nxt-related__title {
        font-size: 55px;
        line-height: 64px;
      }
      .nxt-related__subtitle {
        font-size: 40px;
        line-height: 48px;
      }
    }
    @media (max-width: 767px) {
      .nxt-related__title {
        font-size: 40px;
        line-height: 48px;
      }
      .nxt-related__subtitle {
        font-size: 24px;
        line-height: 32px;
      }
    }
    @media (max-width: 540px) {
      .nxt-related__area .grid .grid__item {
        max-width: 100%;
        width: 100%;
      }
    }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <product-recommendations
    class="nxt-container related-products section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    data-url="{{ routes.product_recommendations_url }}?limit={{ section.settings.max_products_to_show }}"
    data-section-id="{{ section.id }}"
    data-product-id="{{ product.id }}"
  >
    {% assign initial_products_to_show = section.settings.initial_products_to_show %}
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }} nxt-related__title">
        {{ section.settings.heading }}
      </h2>
      <p class="nxt-related__subtitle">{{ section.settings.subheading }}</p>
      <ul
        class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
        role="list"
      >
        {% assign skip_card_product_styles = false %}
        {% for recommendation in recommendations.products %}
          {% assign item_index = forloop.index %}
          <li
            class="grid__item{% if item_index > initial_products_to_show %} hidden-courses{% endif %}"
            {% if item_index > initial_products_to_show %}
              data-hidden-course
            {% endif %}
          >
            {% render 'card-product',
              card_product: recommendation,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              skip_styles: skip_card_product_styles
            %}
          </li>
          {%- assign skip_card_product_styles = true -%}
        {% endfor %}
      </ul>
      {% if recommendations.products_count > 4 %}
        {% assign remaining_count = recommendations.products_count | minus: 4 %}
        <div class="course-actions">
          <button
            class="show-more-courses"
            data-section-id="{{ section.id }}"
            data-remaining-count="{{ remaining_count }}"
          >
            Show {{ remaining_count }} more
          </button>
        </div>
      {% endif %}
    {% endif %}
  </product-recommendations>
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>
<script>
  function initializeShowMoreButtons() {
    const showMoreButtons = document.querySelectorAll('.show-more-courses:not([data-initialized])');
    showMoreButtons.forEach(function (showMoreButton) {
      showMoreButton.setAttribute('data-initialized', 'true');

      const sectionId = showMoreButton.getAttribute('data-section-id');
      const remainingCount = showMoreButton.getAttribute('data-remaining-count');

      let sectionElement = showMoreButton.closest('.nxt-related__area');
      if (!sectionElement) {
        sectionElement = showMoreButton.closest('product-recommendations');
      }
      if (!sectionElement) {
        sectionElement = document.querySelector('.section-' + sectionId + '-padding');
      }

      if (!sectionElement) {
        return;
      }

      const hiddenCourses = sectionElement.querySelectorAll('[data-hidden-course]');
      const originalButtonText = showMoreButton.textContent.trim();
      let isExpanded = false;

      if (hiddenCourses.length > 0) {
        showMoreButton.addEventListener('click', function (e) {
          e.preventDefault();

          if (!isExpanded) {
            hiddenCourses.forEach(function (course) {
              course.classList.remove('hidden-courses');
            });
            showMoreButton.textContent = 'Show Less';
            isExpanded = true;
          } else {
            hiddenCourses.forEach(function (course) {
              course.classList.add('hidden-courses');
            });
            showMoreButton.textContent = originalButtonText;
            isExpanded = false;
          }
        });
      } else {
        showMoreButton.style.display = 'none';
      }
    });
  }

  document.addEventListener('DOMContentLoaded', function () {
    initializeShowMoreButtons();
    setTimeout(initializeShowMoreButtons, 1500);
  });

  document.addEventListener('shopify:section:load', initializeShowMoreButtons);
  document.addEventListener('shopify:block:select', initializeShowMoreButtons);
</script>
