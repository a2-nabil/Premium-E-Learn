{% style %}
    .nxt-{{ section.id }} {
      {% if section.settings.bg_type == 'color' %}
        background: {{ section.settings.background_color }};
      {% elsif section.settings.bg_type == 'gradient' %}
        background: {{ section.settings.background_gradient }};
      {% elsif section.settings.bg_type == 'image' %}
        background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
        background-repeat: {{ section.settings.bg_repeat }};
        background-position: {{ section.settings.bg_position }};
        background-size: {{ section.settings.bg_size }};
      {% elsif section.settings.bg_type == 'video' %}
        background: {{ section.settings.background_video }};
      {% endif %}
      padding-top: {{ section.settings.padding_top | times: 0.6 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.6 | round: 0 }}px;
      padding-left: {{ section.settings.padding_left_right }}px;
      padding-right: {{ section.settings.padding_left_right }}px;
    }

    @media (min-width: 768px) {
      .nxt-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    .nxt-container {
      width: 100%;
      margin: 0 auto;
    }
    .nxt-{{ section.id }} .nxt-container {
      max-width: {{ section.settings.container_max_width }}px;
    }

    .nxt-{{ section.id }} .nxt-heading_title {
      font-family: "Neue Haas Grotesk Display Pro", sans-serif;
      font-weight: 300;
      font-size: 34px;
      line-height: 42px;
      letter-spacing: normal;
      margin: 0;
    }

    .nxt-{{ section.id }} .nxt-heading_subtitle {
      font-family: "Neue Haas Grotesk Display Pro", sans-serif;
      font-weight: 300;
      font-size: 16px;
      line-height: normal;
      letter-spacing: 0.36;
      margin: 0;
    }
    .nxt-{{ section.id }} .nxt-button {
      text-decoration: none;
      display: inline-flex;
      transition: all 0.3s ease;
      font-family: "Inter", sans-serif;
      font-weight: 400;
          font-size: 16px;
          line-height: normal;
          letter-spacing: normal;
          margin: 0;
          padding: 8px 20px;
          gap: 5px;
    }
    .nxt-{{ section.id }} .nxt-button:hover {
    background: #f0f0f0;
    transform: translateY(-2px);
    }


    .nxt-{{ section.id }} .nxt-content-wrapper {
      width: 100%;
      {% if section.settings.contents_width > 0 %}
      max-width: {{ section.settings.contents_width }}px;
      {% endif %}
      {% if section.settings.contents_center %}
        margin: 0 auto;
      {% endif %}
    }
    .nxt-{{ section.id }} .nxt-image-wrapper {
      display: flex;
      width: fit-content;
      overflow: hidden;
    }



    .nxt-{{ section.id }} .nxt-image_wrapper {
      display: flex;
      text-decoration: none;
      transition: all 0.3s ease;
      height: auto;
      overflow: hidden;
    }
    .nxt-{{ section.id }} .nxt-image_wrapper img{
      transition: all 0.3s ease;
      max-width: 100%;
      width: 100%;
      height: 100%;
    }
    .nxt-{{ section.id }} .nxt-text-area a {
      display: inline-flex;
      transition: all 0.3s ease;
      text-decoration: none;
    }

    @media (min-width: 992px) {
    .nxt-{{ section.id }} .nxt-section-wrapper {
      display: flex;
      flex-direction: {{ section.settings.flex_direction }};
      align-items: {{ section.settings.align_items }};
