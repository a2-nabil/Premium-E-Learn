<div class="nxt-{{ section.id }}">
  <div class="nxt-container {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {% if section.blocks.size > 0 %}
      <div class="nxt-section-wrapper">
        <div class="nxt-content-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'text' %}
              {% style %}
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_title {
                    color: {{ block.settings.text_color }};
                  }
                @media (min-width: 992px) {
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_title {
                    text-align: {{ block.settings.text_align }};
                    font-size: {{ block.settings.text_size }}px;
                    font-weight: {{ block.settings.text_font_weight }};
                    line-height: {{ block.settings.text_line_height }}px;
                    margin-bottom: {{ block.settings.text_margin_bottom }}px;
                  }
                }
              {% endstyle %}
              <h2 class="nxt-heading_title nxt-block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </h2>
            {% elsif block.type == 'rich_text' %}
              {% style %}
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle {
                    color: {{ block.settings.text_color }};
                    width: 100%;
                    {% if block.settings.block_width > 0 %}
                      max-width: {{ block.settings.block_width }}px;
                    {% endif %}
                     {% if block.settings.block_center %}
                      margin: 0 auto;
                     {% endif %}
                  }
                  {% if block.settings.heading_list_icon_show %}
                      .nxt-{{ section.id }} .nxt-heading_subtitle ul {
                        list-style: none;
                        padding: 0;
                        margin: 30px 0;
                      }
                      .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle li {
                        position: relative;
                        display: flex;
                        gap: 18px;
                        text-align: left;
                      }
                     .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle li::before {
                      content: '';
                        background-image: url('{{ block.settings.heading_list_icon | image_url }}');
                        width: 33px;
                        height: 33px;
                        background-size: contain;
                        background-repeat: no-repeat;
                        background-position: center;
                        flex-shrink: 0;
                     }
                    .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle li:not(:last-child) {
                        margin-bottom: 18px;
                    }
                    @media (max-width: 767px){
                        .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle li {
                            gap: 10px;
                        }
                        .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle li:not(:last-child) {
                        margin-bottom: 10px;
                        }
                        .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle li::before {
                            width: 20px;
                            height: 20px;
                        }
                    }
                    {% endif %}
                @media (min-width: 992px) {
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-heading_subtitle {
                    text-align: {{ block.settings.text_align }};
                    font-size: {{ block.settings.text_size }}px;
                    font-weight: {{ block.settings.text_font_weight }};
                    line-height: {{ block.settings.text_line_height }}px;
                    margin-bottom: {{ block.settings.text_margin_bottom }}px;
                  }
                }
              {% endstyle %}
              <div class="nxt-rich-text nxt-heading_subtitle nxt-block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.rich_text }}
              </div>
            {% elsif block.type == 'text_area' %}
              <div class="nxt-text-area nxt-svg-icon nxt-block-{{ block.id }}" {{ block.shopify_attributes }}>
                {% style %}
                    .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-text_area {
                      color: {{ block.settings.text_color }};
                      {% if block.settings.block_width > 0 %}
                      max-width: {{ block.settings.block_width }}px;
                    {% endif %}
                     {% if block.settings.block_center %}
                      margin: 0 auto;
                     {% endif %}
                    }
                  @media (min-width: 992px) {
                    .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-text_area {
                      text-align: {{ block.settings.text_align }};
                      font-size: {{ block.settings.text_size }}px;
                      font-weight: {{ block.settings.text_font_weight }};
                      line-height: {{ block.settings.text_line_height }}px;
                      margin-bottom: {{ block.settings.text_margin_bottom }}px;
                    }
                  }
                {% endstyle %}
                {% if block.settings.text_area_url != blank %}
                  <a href="{{ block.settings.text_area_url }}">
                    {{ block.settings.text_area }}
                  </a>
                {% else %}
                  {{ block.settings.text_area }}
                {% endif %}
              </div>
            {% elsif block.type == 'button' %}
              {% style %}
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-button {
                    color: {{ block.settings.button_text_color }};
                    background-color: {{ block.settings.button_bg_color }};
                    border-radius: {{ block.settings.button_border_radius }}px;
                    flex-direction: {{ block.settings.button_icon_position }};
                    justify-content: {{ block.settings.justify_content }};
                    align-items: {{ block.settings.align_items }};
                    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
                  }
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-button:hover {
                    background-color: {{ block.settings.button_hover_bg_color }};
                    color: {{ block.settings.button_hover_text_color }};
                    border-width: {{ block.settings.button_hover_border_width }}px | default: {{ block.settings.button_border_width }}px;
                    border-color: {{ block.settings.button_hover_border_color }};
                  }
                @media (min-width: 992px) {
                  .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-button {
                    text-align: {{ block.settings.text_align }};
                    font-size: {{ block.settings.text_size }}px;
                    font-weight: {{ block.settings.text_font_weight }};
                    line-height: {{ block.settings.text_line_height }}px;
                    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding_horizontal }}px;
                    gap: {{ block.settings.button_icon_gap }}px;
                    margin-bottom: {{ block.settings.text_margin_bottom }}px;
                  }
                }
              {% endstyle %}
              {% if block.settings.button_url != blank %}
                <a
                  href="{{ block.settings.button_url }}"
                  class="nxt-button nxt-block-{{ block.id }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_text }}
                  {% if block.settings.button_svg_icon != blank %}
                    <span class="nxt-svg-icon">
                      {{ block.settings.button_svg_icon }}
                    </span>
                  {% endif %}
                </a>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <div class="nxt-image-wrapper">
              {% style %}
                {% if block.settings.image_width > 0 %}
                    .nxt-{{ section.id }} .nxt-image-wrapper {
                      max-width: {{ block.settings.image_width }}px;
                      width: 100%;
                    }
                  {% endif %}
                    .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-image_wrapper {
                      border-radius: {{ block.settings.image_border_radius }}px;
                      width: 100%;
                    }
                    .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-image_wrapper img{
                      object-fit: {{ block.settings.image_object_fit }};
                      object-position: {{ block.settings.image_object_position }};
                      border-radius: {{ block.settings.image_border_radius }}px;
                    }
                  @media (min-width: 992px) {
                    .nxt-{{ section.id }} .nxt-block-{{ block.id }}.nxt-image_wrapper{
                        height: {{ block.settings.image_height }}px;
                    }
                  }
              {% endstyle %}
              {% if block.settings.image != blank %}
                {% if block.settings.image_url != blank %}
                  <a
                    class="nxt-image_wrapper nxt-block-{{ block.id }}"
                    href="{{ block.settings.image_url }}"
                    {{ block.shopify_attributes }}
                  >
                    <img
                      class="nxt-image"
                      src="{{ block.settings.image | image_url: width: block.settings.image_width | default: 800 }}"
                      alt="{{ block.settings.image.alt }}"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <div class="nxt-image_wrapper nxt-block-{{ block.id }}" {{ block.shopify_attributes }}>
                    <img
                      class="nxt-image"
                      src="{{ block.settings.image | image_url: width: block.settings.image_width | default: 800 }}"
                      alt="{{ block.settings.image.alt }}"
                      loading="lazy"
                    >
                  </div>
                {% endif %}
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

