<div class="rh-future-building-section">
        <div class="container_rh">
            <div class="rh-future-main-wrapper_rh">
                <div class="rh-future-header-section_rh">
                    <h2 class="rh-future-title_rh">{{ section.settings.title | default: "Join 90,000+ People Building Their Future on E-Learn" }}</h2>
                </div>
                <div class="rh-future-content-section_rh">
                    <div class="rh-future-images-section_rh">
                        {% for block in section.blocks %}
                            {% if block.type == 'student_image' %}
                                <div class="rh-future-image-item_rh {% if block.settings.add_offset %}rh-future-image-offset_rh{% endif %}" {{ block.shopify_attributes }}>
                                    <div class="rh-future-image-wrapper_rh">
                                        {% if block.settings.image != blank %}
                                            <img src="{{ block.settings.image | img_url: '288x384' }}" 
                                                 alt="{{ block.settings.alt_text | default: 'E-Learn Student' }}" 
                                                 class="rh-future-image_rh"
                                                 width="auto"
                                                 height="auto" 
                                                 loading="lazy" />
                                        {% else %}
                                            <img src="https://dummyimage.com/288x384/4F46E5/FFFFFF?text=Student" 
                                                 alt="{{ block.settings.alt_text | default: 'E-Learn Student' }}" 
                                                 class="rh-future-image_rh" 
                                                 width="auto"
                                                 height="auto"
                                                 loading="lazy" />
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                        
                        {% comment %} Default images if no blocks are added {% endcomment %}
                        {% if section.blocks.size == 0 %}
                            <div class="rh-future-image-item_rh rh-future-image-offset_rh">
                                <div class="rh-future-image-wrapper_rh">
                                    <img src="https://dummyimage.com/288x384/10B981/FFFFFF?text=Happy+Student" 
                                         alt="Happy Student Learning Online" 
                                         class="rh-future-image_rh" 
                                         width="auto"
                                         height="auto"
                                         loading="lazy" />
                                </div>
                            </div>
                            <div class="rh-future-image-item_rh">
                                <div class="rh-future-image-wrapper_rh">
                                    <img src="https://dummyimage.com/288x384/F59E0B/FFFFFF?text=Pro+Student" 
                                         alt="Professional Student Studying" 
                                         class="rh-future-image_rh" 
                                         width="auto"
                                         height="auto"
                                         loading="lazy" />
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="rh-future-stats-section_rh">
                        <div class="rh-future-stats-list_rh">
                            {% assign stat_blocks = section.blocks | where: 'type', 'statistic' %}
                            {% for block in stat_blocks %}
                                <div class="rh-future-stat-item_rh" {{ block.shopify_attributes }}>
                                    <div class="rh-future-stat-number_rh">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</div>
                                    <div class="rh-future-stat-content_rh {% unless forloop.last %}rh-future-stat-border_rh{% endunless %}">
                                        <div class="rh-future-stat-text_rh">{{ block.settings.stat_text | default: "Enter statistic text" }}</div>
                                    </div>
                                </div>
                            {% endfor %}
                            
                            {% comment %} Default stats if no statistic blocks are added {% endcomment %}
                            {% if stat_blocks.size == 0 %}
                                <div class="rh-future-stat-item_rh">
                                    <div class="rh-future-stat-number_rh">01</div>
                                    <div class="rh-future-stat-content_rh rh-future-stat-border_rh">
                                        <div class="rh-future-stat-text_rh">93% satisfaction rate</div>
                                    </div>
                                </div>
                                <div class="rh-future-stat-item_rh">
                                    <div class="rh-future-stat-number_rh">02</div>
                                    <div class="rh-future-stat-content_rh rh-future-stat-border_rh">
                                        <div class="rh-future-stat-text_rh">500+ companies recognise us</div>
                                    </div>
                                </div>
                                <div class="rh-future-stat-item_rh">
                                    <div class="rh-future-stat-number_rh">03</div>
                                    <div class="rh-future-stat-content_rh">
                                        <div class="rh-future-stat-text_rh">New learners every 30 minutes</div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        {% if section.settings.cta_text != blank %}
                        <div class="rh-future-cta-section_rh">
                            <a href="{{ section.settings.cta_url | default: '#' }}" class="rh-future-cta-button_rh">
                                <span class="rh-future-cta-text_rh">{{ section.settings.cta_text | default: "Sign up now" }}</span>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

